{
  "manifest_version": 2,
  "name": "Whatsapp Web Dark Theme",
  "author": "Murilo Henrique",
  "description": "Habilita automaticamente o tema `Dark` no whatsapp web.",
  "homepage_url": "https://github.com/omurilo",
  "version": "1.0.0",
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["main.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/dark-wpp-16x16.png",
    "48": "icons/dark-wpp-48x48.png",
    "128": "icons/dark-wpp-128x128.png",
    "500": "icons/dark-wpp-500x500.png"
  }
}
